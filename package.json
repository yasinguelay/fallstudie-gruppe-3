{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "(npm run coverage) && (cd app && npm install && npm run build) && (cd.. && node swagger.js)",
    "dev": "nodemon server.js",
    "swagger-autogen": "node swagger.js",
    "test": "mocha --timeout 10000 --exit",
    "coverage": "nyc --reporter=lcov npm run test",
    "lint": "eslint .",
    "format": "prettier --single-quote --check .",
    "prepare": "husky install .husky"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "express-jwt-authz": "^2.4.1",
    "express-openid-connect": "^2.5.2",
    "googleapis": "^92.0.0",
    "jwks-rsa": "^2.0.5",
    "mongodb": "^3.6.6",
    "node-fetch": "^2.6.6",
    "nodemailer": "^6.7.2",
    "nyc": "^15.1.0",
    "swagger-autogen": "^2.17.2",
    "swagger-ui-express": "^4.3.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^9.1.3"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1"
  },
  "lint-staged": {
    "!(app/**|test/**).js": [
      "prettier --single-quote --write",
      "eslint --fix"
    ]
  }
}
